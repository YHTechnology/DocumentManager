<controls:ChildWindow x:Class="DocumentManager.Controls.NotifyWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="181" 
           Title="NotifyWindow" Style="{StaticResource ChildWindowStyle}" FontFamily="Microsoft YaHei">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1" FontFamily="Microsoft YaHei"/>
        <TextBlock x:Name="NotifyContext" Margin="10,7,16,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Foreground="Black" FontSize="16" FontFamily="Microsoft YaHei" Height="69" />
    </Grid>
</controls:ChildWindow>